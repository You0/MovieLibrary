<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.com.movielibrary">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/library"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.activity.MovieDetaillActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>

        <activity android:name=".ui.activity.TestA"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".ui.activity.ImageDisplay"
            ></activity>

        <activity android:name=".ui.activity.SearchActivity"
            android:launchMode="singleTask"
            ></activity>

        <activity android:name=".ui.activity.SettingActivity"
            android:theme="@style/AppTheme.Setting"
            ></activity>

    </application>

</manifest>